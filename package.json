{
  "name": "ad-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate",
  "main": "./server/server.js",
  "scripts": {
    "watch:html": "chokidar \"./src/index.html\" -c \"npm run build:html\"",
    "build:html": "htmlmin ./src/index.html -o ./public/index.html",
    "watch:css": "chokidar \"./src/css/global.css\" -c \"npm run build:css\"",
    "build:css": "postcss ./src/css/global.css -u postcss-cssnext -o ./public/css/global.legacy.css && cssnano ./public/css/global.legacy.css ./public/css/global.min.css",
    "watch:js": "chokidar \"./src/js/global.js\" -c \"npm run build:js\"",
    "build:js": "babel ./src/js/global.js -o ./public/js/global.es2015.js --presets=es2015 && babili ./public/js/global.es2015.js -o ./public/js/global.min.js --no-babelrc",
    "build": "npm run build:html && npm run build:css && npm run build:js",
    "watch": "parallelshell \"npm run watch:html\" \"npm run watch:css\" \"npm run watch:js\"",
    "start": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamduncan/Boilerplate"
  },
  "author": "Adam Duncan",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babili": "0.0.11",
    "chokidar-cli": "^1.2.0",
    "cssnano-cli": "^1.0.5",
    "express": "^4.14.1",
    "html-minifier-cli": "^0.1.0",
    "nodemon": "^1.11.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^3.0.0-beta",
    "postcss-cssnext": "^2.9.0"
  }
}
